<Window x:Class="EightSeneca.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EightSeneca WPF"
        WindowStyle="None"
        WindowState="Maximized"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <!-- 70% -->
            <ColumnDefinition Width="3*"/>
            <!-- 30% -->
        </Grid.ColumnDefinitions>

        <!-- Left 70%: Browser -->
        <ContentControl Grid.Column="0"
                        Content="{Binding WebEngine.BrowserControl}"/>

        <!-- Right 30%: 3 videos -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0" Content="{Binding Media.Players[0].View}"/>
            <ContentControl Grid.Row="1" Content="{Binding Media.Players[1].View}"/>
            <ContentControl Grid.Row="2" Content="{Binding Media.Players[2].View}"/>
        </Grid>
    </Grid>
</Window>
