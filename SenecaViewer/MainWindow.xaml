<Window x:Class="SenecaViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:vm="clr-namespace:SenecaViewer.ViewModels"
        Title="8Seneca Viewer"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Visibility="Collapsed">

    <Window.InputBindings>
        <!-- Alt+Q: Hide window -->
        <KeyBinding Key="Q" Modifiers="Alt" Command="{Binding HideWindowCommand}"/>

        <!-- Escape: Hide window (KHẨN CẤP) -->
        <KeyBinding Key="Escape" Command="{Binding HideWindowCommand}"/>

        <!-- Ctrl+Q: Close app (KHẨN CẤP) -->
        <KeyBinding Key="Q" Modifiers="Control" Command="{Binding CloseApplicationCommand}"/>

        <!-- Alt+F4: Close app (KHẨN CẤP) -->
        <KeyBinding Key="F4" Modifiers="Alt" Command="{Binding CloseApplicationCommand}"/>
    </Window.InputBindings>

    <!-- Main Content -->
    <Grid Margin="0" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side: Web Browser (70%) -->
        <Border Grid.Column="0" BorderThickness="0" Margin="0" Padding="0">
            <ContentControl Content="{Binding BrowserControl}"/>
        </Border>

        <!-- Right side: Videos (30%) -->
        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Video Player 1 -->
            <Border Grid.Row="0" Background="Black" BorderThickness="0" Margin="0" Padding="0">
                <vlc:VideoView MediaPlayer="{Binding VideoPlayer1}"/>
            </Border>

            <!-- Video Player 2 -->
            <Border Grid.Row="1" Background="Black" BorderThickness="0" Margin="0" Padding="0">
                <vlc:VideoView MediaPlayer="{Binding VideoPlayer2}"/>
            </Border>

            <!-- Video Player 3 -->
            <Border Grid.Row="2" Background="Black" BorderThickness="0" Margin="0" Padding="0">
                <vlc:VideoView MediaPlayer="{Binding VideoPlayer3}"/>
            </Border>
        </Grid>
    </Grid>
</Window>