<Window x:Class="WpfApp.Views.MethodDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Select Method" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Title}" Margin="0 0 0 5"/>
        <ComboBox ItemsSource="{Binding Options}" SelectedItem="{Binding SelectedOption}" Margin="0 0 0 10"/>
        <Button Content="OK" IsDefault="True" Click="OnOkClicked"/>
    </StackPanel>
</Window>
